{
  "name": "@alinea/suite",
  "version": "0.6.0",
  "license": "MIT",
  "types": "./src/suite.d.ts",
  "type": "module",
  "files": ["./dist", "./src"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
