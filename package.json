  },
  "exports": {
    ".": {
      "deno": "./dist/suite.deno.js",
      "bun": "./src/suite.bun.js",
      "node": "./src/suite.node.js",
      "types": "./src/suite.d.ts"
    },
    "./package.json": "./package.json"
  },
  "imports": {
    "#suite": {
      "bun": "./src/suite.bun.js",
      "node": "./src/suite.node.js",
      "types": "./src/suite.d.ts"
    }
  }
